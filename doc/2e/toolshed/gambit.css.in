/* BEGIN COLORS */
body {
    color: %fg-main%;
    background-color: %bg-main%;
}

a:link {
    color: %link%;
}

a:visited {
    color: %link-visited%;
}

hr {
    color: %hr%;
}

.chapter-level-extent pre {
    border-left-color: %fg-main%;
}

dl.first-deftp, dl.first-deftypefn, dl.first-deftypevr {
    .i {
        color: %emphasis%;
    }
    dt span.category-def {
        color: %category-def%;
    }
    dd pre {
        .slanted {
            color: %fg-dim%;
        }
        span.false {
            color: %false%;
        }
        span.ok {
            color: %ok%;
        }
    }
}

dl.first-deftp {
    background: linear-gradient(90deg, %bg-deftp%, 1px, %bg-dim%);
}

dl.first-deftypefn {
    background: linear-gradient(90deg, %bg-deftypefn%, 1px, %bg-dim%);
    span.sexp-paren {
        color: %sexp-paren%;
    }
}

dl.first-deftypevr {
    background: linear-gradient(90deg, %bg-deftypevr%, 1px, %bg-dim%);
}

dl.first-deftypefn, dl.first-deftp, dl.first-deftypevr {
    border-top-color: %hr%;
    dt code.def-code-arguments, dd p var.var, dd li var.var {
        color: %def-var%;
    }
    dt code.def-code-arguments span.bracket {
        color:%fg-main%;
    }
    dd {
        background-color: %bg-main%;
    }
}

/* END COLORS */

body {
    font-family: sans-serif;
}

.top-level-extent, .chapter-level-extent, .appendix-level-extent {
    dd, .center, li, p:not(.nav-panel p) {
        max-width: 40em;
    }
}

dl.first-deftypefn {
    dt.deftypefn, dt.deftypefnx {
        font-family: monospace;
        span.sexp-paren {
            font-size: larger;
        }    
    }
}

dl.first-deftp, dl.first-deftypevr {
    dt.deftp, dt.deftypevr {
        strong.def-name {
            font-family: inherit;
        }
    }
}

dl.first-deftp, dl.first-deftypefn, dl.first-deftypevr {
    max-width: 44em;
    border-top-style: solid;
    border-top-width: thin;
    padding-top: 0.2em;
    dt.deftp, dt.deftypefn, dt.deftypefnx, dt.deftypevr {
        padding-left: 0.5em;
        strong.def-name {
            font-weight: normal;
        }
    }
    dd {
        margin-left: 0;
        margin-top: 0.2em;
        max-width: 100%;
        padding-left: 2em;
        padding-top: 1px;
    }
}

.chapter-level-extent {
    dd p:not(.nav-panel p), p:not(.nav-panel p) {
        text-align: justify;
    }
    div.example {
        margin-left: 1.62em;
    }
        pre {
            padding: 0 0 0 0.38em;
            border-left-style: dotted;
            border-left-width: thin;
            font-size: 1.1278em;
            font-weight: normal;
        }
    }
}

dl.first-deftypevr dt.deftypevr, dl.first-deftp dt.deftp {
    span strong {
        font-family: normal;
        font-weight: normal;
    }
}
