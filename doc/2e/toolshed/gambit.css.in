/* BEGIN COLORS */
body {
    color: %fg-main%;
    background-color: %bg-main%;
}

a:link {
    color: %link%;
}

a:visited {
    color: %link-visited%;
}

hr {
    color: %hr%;
}

.chapter-level-extent pre {
    background-color: %bg-dim%;
    border-color: %border%;
}


dl.first-deftypefn {
    dt.deftypefn, dt.deftypefnx {
        font-family: monospace;
    }
}

dl.first-deftp, dl.first-deftypefn, dl.first-deftypevr {
    .i {
        color: %emphasis%;
    }
    dt span.category-def {
        color: %fg-dim%;
    }
    dd pre {
        .slanted {
            color: %fg-dim%;
        }
        span.false {
            color: %false%;
        }
        span.ok {
            color: %fg-alt%;
        }
    }
}

dl.first-deftypefn {
    dt code.def-code-arguments, dd p var.var, dd li var.var {
        color: %arg%;
    }
    dt code.def-code-arguments span.bracket {
        color:%fg-main%;
    }
}
/* END COLORS */

.top-level-extent, .chapter-level-extent, .appendix-level-extent {
    dd, .center, li, p:not(.nav-panel p) {
        max-width: 40em;
    }
}

.chapter-level-extent {
    dd p:not(.nav-panel p), p:not(.nav-panel p) {
        text-align: justify;
    }
    pre {
        border-style: solid;
        padding: 0.3236em 0.2em;
    }
}

dl.first-deftypevr dt.deftypevr, dl.first-deftp dt.deftp {
    span strong {
        font-family: normal;
        font-weight: normal;
    }
}
